<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="5"
    android:rowCount="6">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:id="@+id/editText"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_columnSpan="4" />

    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="DEL"
        android:id="@+id/butdel"
        android:layout_columnSpan="4"
        android:layout_row="1"
        android:layout_column="0" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="sin"
        android:textAllCaps="false"
        android:id="@+id/butsin"
        android:layout_row="2"
        android:layout_column="0" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="cos"
        android:textAllCaps="false"
        android:id="@+id/butcos"
        android:layout_row="2"
        android:layout_column="1" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="tan"
        android:textAllCaps="false"
        android:id="@+id/buttan"
        android:layout_row="2"
        android:layout_column="2" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="i"
        android:textAllCaps="false"
        android:id="@+id/buti"
        android:layout_row="2"
        android:layout_column="3" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="ln"
        android:textAllCaps="false"
        android:id="@+id/butln"
        android:layout_row="3"
        android:layout_column="0" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="log"
        android:textAllCaps="false"
        android:id="@+id/butlog"
        android:layout_row="3"
        android:layout_column="1" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="@string/mypi"
        android:id="@+id/butpi"
        android:layout_row="3"
        android:layout_column="2" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="e"
        android:textAllCaps="false"
        android:id="@+id/bute"
        android:layout_row="3"
        android:layout_column="3" />

    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="%"
        android:id="@+id/butper"
        android:layout_row="4"
        android:layout_column="0" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="!"
        android:id="@+id/butfact"
        android:layout_row="4"
        android:layout_column="1" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="@string/sqr"
        android:id="@+id/butsqr"
        android:layout_row="4"
        android:layout_column="2" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="^"
        android:id="@+id/butpwr"
        android:layout_row="4"
        android:layout_column="3" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text="("
        android:id="@+id/butlp"
        android:layout_row="5"
        android:layout_column="0" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text=")"
        android:id="@+id/butrp"
        android:layout_row="5"
        android:layout_column="1" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text=""
        android:id="@+id/butblank"
        android:layout_row="5"
        android:layout_column="2" />
    <Button
        android:layout_width="@dimen/gridbox"
        android:layout_height="@dimen/gridbox"
        android:text=""
        android:id="@+id/butblank2"
        android:layout_row="5"
        android:layout_column="3" />

</GridLayout>
